generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model classgroup {
  file String @unique(map: "ClassGroup_file_key")
  name String @unique(map: "ClassGroup_name_key")
  id   Int    @id @default(autoincrement())
}

model event {
  id           Int      @id @default(autoincrement())
  creneau      Int
  semaine      String
  dateJour     DateTime
  activite     String
  couleur      String
  salle        String
  visio        Boolean
  repas        Boolean
  eval         Boolean
  startAt      String
  endAt        String
  classGroupId Int

  @@index([classGroupId], map: "Event_classGroupId_fkey")
}

model user {
  id           Int       @id @default(autoincrement())
  email        String    @unique(map: "User_email_key")
  password     String
  firstname    String
  lastname     String
  role         user_role @default(STUDENT)
  classGroupId Int?

  @@index([classGroupId], map: "User_classGroupId_fkey")
}

enum user_role {
  STUDENT
  ADMIN
}
