generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model classgroup {
  file  String  @unique(map: "ClassGroup_file_key")
  name  String  @unique(map: "ClassGroup_name_key")
  id    Int     @id @default(autoincrement())
  event event[]
  user  user[]
}

model event {
  id           Int        @id @default(autoincrement())
  creneau      Int
  activite     String
  couleur      String
  salle        String
  visio        Boolean
  repas        Boolean
  classGroupId Int
  dateJour     DateTime
  endAt        String
  eval         Boolean
  semaine      String
  startAt      String
  classgroup   classgroup @relation(fields: [classGroupId], references: [id])

  @@unique([classGroupId, activite, semaine, dateJour, creneau], map: "Event_classGroupId_activite_semaine_dateJour_key")
}

model user {
  id           Int         @id @default(autoincrement())
  email        String      @unique(map: "User_email_key")
  password     String
  firstname    String
  lastname     String
  role         user_role   @default(STUDENT)
  classGroupId Int?
  classgroup   classgroup? @relation(fields: [classGroupId], references: [id])

  @@index([classGroupId], map: "user_classGroupId_fkey")
}

enum user_role {
  STUDENT
  ADMIN
}
